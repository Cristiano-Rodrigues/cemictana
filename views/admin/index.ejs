<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/partials/sidebar.css">
  <link rel="stylesheet" href="/css/partials/topbar.css">
  <link rel="stylesheet" href="/css/partials/report.css">
  <link rel="stylesheet" href="/css/admin/index.css">
  <link rel="stylesheet" href="/css/admin/template.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <title>Dashboard</title>
</head>
<body>
  <main>
    <%- include('../partials/sidebar') %>

    <div class="main">
      <%- include('../partials/topbar', {
        sectionName: 'Dashboard'
      }) %>

      <%- include('../partials/report') %>

      <div id="update-form" class="form-wrapper">
        <div class="alert alert-danger" id="alert-danger">
          <div class="message"></div>
          <button class="close-btn">
            <i class="bx bx-x"></i>
          </button>
        </div>
        <div class="alert alert-success" id="alert-success">
          <div class="message"></div>
          <button class="close-btn">
            <i class="bx bx-x"></i>
          </button>
        </div>
        <form class="form" id="form">
          <div class="header">
            <div class="title">
              <p class="highlight">
                Atualizar Agendamento
              </p>
            </div>
            <button class="close bx bx-x" id="close-btn" data-relto="update-form" type="button"></button>
          </div>
          <div class="body">
            <input name="id" readonly hidden/>
            <div class="input-wrapper">
              <label for="type">Tipo de agendamento</label>
              <input type="text" name="type" id="type" readonly/>
            </div>
            <div class="input-wrapper">
              <label for="employee">Funcionario Encarregado</label>
              <select name="employee" id="employee"></select>
            </div>
            <div class="input-wrapper">
              <label for="schedulingDate">Data</label>
              <input type="datetime-local" name="schedulingDate" id="schedulingDate">
            </div>
            <div class="input-wrapper">
              <label for="defunct">Defunto</label>
              <select name="defunct" id="defunct"></select>
            </div>
            <div class="input-wrapper">
              <label for="unit">Unidade</label>
              <select name="unit" id="unit"></select>
            </div>
          </div>
          <div class="footer">
            <button class="delete" type="submit" id="delete">
              Eliminar
            </button>
            <button class="save" type="submit">
              Salvar
            </button>
          </div>
        </form>
      </div>
      
      <div class="calendar-wrapper">
        <div class="schedule-calendar" id="calendar">
          <div class="header">
            <div class="left-button" id="prev-month-main">
              <i class="bx bx-chevron-left"></i>
            </div>
            <div class="date">
              <div class="month">
                <div id="month-value"></div>
                <div class="controls">
                  <div class="up-button">
                    <i class="bx bx-chevron-up" id="next-month"></i>
                  </div>
                  <div class="bottom-button">
                    <i class="bx bx-chevron-down" id="prev-month"></i>
                  </div>
                </div>
              </div>
              <div class="year">
                <div id="year-value"></div>
                <div class="controls">
                  <div class="up-button" id="next-year">
                    <i class="bx bx-chevron-up"></i>
                  </div>
                  <div class="bottom-button">
                    <i class="bx bx-chevron-down" id="prev-year"></i>
                  </div>
                </div>
              </div>
            </div>
            <div class="right-button" id="next-month-main">
              <div class="bx bx-chevron-right"></div>
            </div>
          </div>
          <div class="days">
            <div class="day">Segunda</div>
            <div class="day">Terça</div>
            <div class="day">Quarta</div>
            <div class="day">Quinta</div>
            <div class="day">Sexta</div>
            <div class="day">Sábado</div>
            <div class="day">Domingo</div>
          </div>
          <div class="monthdays">
          </div>
        </div>
      </div>
    </div>
  </main>
  <script src="/scripts/animations/alert.js"></script>
  <script src="/scripts/services/error-messages.js"></script>
  <script src="/scripts/services/register/update-scheduling.js"></script>
  <script src="/scripts/services/update/fill-employee.js"></script>
  <script src="/scripts/calendar/ExtendedDate.js"></script>
  <script src="/scripts/calendar/index.js"></script>
</body>
</html>