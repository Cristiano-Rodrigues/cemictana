<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/partials/sidebar.css">
  <link rel="stylesheet" href="/css/partials/topbar.css">
  <link rel="stylesheet" href="/css/partials/report.css">
  <link rel="stylesheet" href="/css/partials/table.css">
  <link rel="stylesheet" href="/css/admin/template.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <style>
    .nav-links .option:nth-child(6) {
      color: var(--secondary75);
    }
  </style>
  <title>Usuários</title>
</head>
<body>
  <main>
    <%- include('../partials/sidebar') %>

    <div class="main">
      <%- include('../partials/topbar', {
        sectionName: 'Usuários'
      }) %>

      <%- include('../partials/report') %>

      <%- include('../partials/data-table', {
        actionText: 'Adicionar Usuário',
        data: []
      }) %>
    </div>
    <div id="add-form" class="form-wrapper">
      <div class="alert alert-danger" id="alert-danger">
        <div class="message"></div>
        <button class="close-btn">
          <i class="bx bx-x"></i>
        </button>
      </div>
      <div class="alert alert-success" id="alert-success">
        <div class="message"></div>
        <button class="close-btn">
          <i class="bx bx-x"></i>
        </button>
      </div>
      <form class="form" id="form">
        <div class="header">
          <div class="title">
            <p class="highlight">
              Adicionar Usuário
            </p>
          </div>
          <button class="close bx bx-x" id="close-btn" data-relto="add-form" type="button"></button>
        </div>
        <div class="body">
          <div class="input-wrapper">
            <label for="name">Nome completo*</label>
            <input type="text" name="name" id="name">
          </div>
          <div class="input-wrapper">
            <label for="email">Email*</label>
            <input type="email" name="email" id="email">
          </div>
          <div class="input-wrapper">
            <label for="password">Password*</label>
            <input type="password" name="password" id="password">
          </div>
          <div class="input-wrapper">
            <label for="permission">Permissão*</label>
            <select name="permission" id="permission">
              <option value="admin">Administrador</option>
              <option value="funcionário">Funcionário</option>
            </select>
          </div>
        </div>
        <div class="footer">
          <button class="save" type="submit">
            Salvar
          </button>
        </div>
      </form>
    </div>
  </main>
  <script src="/scripts/animations/alert.js"></script>
  <script src="/scripts/services/error-messages.js"></script>
  <script src="/scripts/services/request.js"></script>
  <script src="/scripts/services/register/user.js"></script>
  <script src="/scripts/services/update/user.js"></script>
</body>
</html>