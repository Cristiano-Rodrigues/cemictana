<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/partials/topbar.css">
  <link rel="stylesheet" href="/css/partials/report.css">
  <link rel="stylesheet" href="/css/partials/table.css">
  <link rel="stylesheet" href="/css/user/template.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <title>Principal</title>
  <style>
    .nav .option:nth-child(1) {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <main>
    <div class="main">
      <div class="topbar">
        <div class="logo">
          <img src="/images/logo.png">
        </div>
        <div class="nav">
          <a href="./" class="option">Principal</a>
          <a href="./defunct" class="option">Defuntos</a>
        </div>
        <input type="text" placeholder="Pesquise">
        <div class="user-data">
          <img src="/images/profile-pq.png" alt="">
          <div class="hidden-box">
            <div class="nav-links">
              <a href="#" class="option">
                <i class='bx bx-user-circle'></i>
                Perfil
              </a>
              <a href="#" class="option">
                <i class='bx bx-help-circle'></i>
                Ajuda
              </a>
              <a href="../login" class="option" id="logout">
                <i class='bx bx-log-in-circle'></i>
                Sair
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="report-wrapper"></div>
      
      <%- include('../partials/data-table', {
        actionText: 'Criar agendamento',
        data: []
      }) %>
    </div>
    <div id="add-form" class="form-wrapper">
      <div class="alert alert-danger" id="alert-danger">
        <div class="message"></div>
        <button class="close-btn">
          <i class="bx bx-x"></i>
        </button>
      </div>
      <div class="alert alert-success" id="alert-success">
        <div class="message"></div>
        <button class="close-btn">
          <i class="bx bx-x"></i>
        </button>
      </div>
      <form class="form" id="form">
        <div class="header">
          <div class="title">
            <p class="highlight">
              Criar Agendamento
            </p>
          </div>
          <button class="close bx bx-x" id="close-btn" data-relto="add-form" type="button"></button>
        </div>
        <div class="body">
          <div class="input-wrapper">
            <label for="type">Tipo de agendamento*</label>
            <select name="type" id="type">
              <option value="sepultamento">Sepultamento</option>
              <option value="exumação">Exumação</option>
              <option value="translado">Translado</option>
            </select>
          </div>
          <div class="input-wrapper">
            <label for="schedulingDate">Data*</label>
            <input type="date" name="schedulingDate" id="schedulingDate">
          </div>
          <div class="input-wrapper">
            <label for="defunct">Defunto*</label>
            <select name="defunct" id="defunct"></select>
          </div>
          <div class="input-wrapper">
            <label for="unit">Unidade*</label>
            <select name="unit" id="unit"></select>
          </div>
        </div>
        <div class="footer">
          <button class="save" type="submit">
            Salvar
          </button>
        </div>
      </form>
    </div>
  </main>
  <script src="/scripts/animations/topbar.js"></script>
  <script src="/scripts/animations/alert.js"></script>
  <script src="/scripts/services/error-messages.js"></script>
  <script src="/scripts/services/request.js"></script>
  <script src="/scripts/services/update/fill-defunct.js"></script>
  <script src="/scripts/services/update/fill-unit.js"></script>
  <script src="/scripts/services/update/scheduling.js"></script>
  <script src="/scripts/services/register/scheduling.js"></script>
  <script src="/scripts/services/logout.js"></script>
</body>
</html>