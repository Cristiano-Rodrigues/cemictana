<div class="data-table-wrapper">
  <div class="data-table">
    <div class="header">
      <div class="controls">
        <button class="filter">
          <i class='bx bxs-filter-alt'></i>
        </button>
        <div class="search-box">
          <i class="bx bx-search"></i>
          <input type="search" placeholder="Pesquisar" id="search">
        </div>
        <button class="add-button" id="add-button" data-relto="add-form">
          <i class="bx bx-plus"></i>
          <%= actionText %>
        </button>
      </div>
    </div>
    <div class="content">
      <table class="table" id="table">
        <thead></thead>
        <tbody></tbody>
      </table>
      <div class="footer">
        <div class="total">
          0 registos
        </div>
        <div class="current-page">
          <button class="left">
            <i class="bx bx-chevron-left"></i>
          </button>
          <div class="page">1/1</div>
          <button class="right">
            <i class="bx bx-chevron-right"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/scripts/animations/table.js" defer></script>
<script src="/scripts/animations/form.js" defer></script>