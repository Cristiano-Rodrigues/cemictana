<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="../../assets/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="../../assets/css/global.css">
  <link rel="stylesheet" href="../../assets/css/partials/sidebar.css">
  <link rel="stylesheet" href="../../assets/css/partials/topbar.css">
  <link rel="stylesheet" href="../../assets/css/partials/report.css">
  <link rel="stylesheet" href="../../assets/css/partials/table.css">
  <link rel="stylesheet" href="../../assets/css/admin/page.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <style>
    .nav-links .option:nth-child(5) {
      color: var(--secondary75);
    }
  </style>
  <title>Defuntos</title>
</head>
<body>
  <main>
    <%- include('../partials/sidebar') %>

    <div class="main">
      <%- include('../partials/topbar', {
        sectionName: 'Defuntos'
      }) %>

      <%- include('../partials/report') %>

      <%- include('../partials/data-table', {
        actionText: 'Adicionar Defunto',
        data: []
      }) %>
    </div>
    <div id="add-form" class="form-wrapper">
      <div class="alert alert-danger" id="alert-danger">
        <div class="message"></div>
        <button class="close-btn">
          <i class="bx bx-x"></i>
        </button>
      </div>
      <div class="alert alert-success" id="alert-success">
        <div class="message"></div>
        <button class="close-btn">
          <i class="bx bx-x"></i>
        </button>
      </div>
      <form class="form" id="form">
        <div class="header">
          <div class="title">
            <p class="highlight">
              Adicionar Defunto
            </p>
          </div>
          <button class="close bx bx-x" id="close-btn" data-relto="add-form" type="button"></button>
        </div>
        <div class="body">
          <div class="input-wrapper">
            <label for="name">Nome completo*</label>
            <input type="text" name="name" id="name">
          </div>
          <div class="input-wrapper">
            <label for="identification">Identificação*</label>
            <input type="text" name="identification" id="identification">
          </div>
          <div class="input-wrapper">
            <label for="responsible">Responsável*</label>
            <select name="responsible" id="responsible"></select>
          </div>
          <div class="input-wrapper">
            <label for="bornDate">Data de nascimento*</label>
            <input type="date" name="bornDate" id="bornDate">
          </div>
          <div class="input-wrapper">
            <label for="deathDate">Data de morte*</label>
            <input type="date" name="deathDate" id="deathDate">
          </div>
          <div class="input-wrapper">
            <label for="deathCause">Causa da morte</label>
            <input type="text" name="deathCause" id="deathCause">
          </div>
        </div>
        <div class="footer">
          <button class="save" type="submit">
            Salvar
          </button>
        </div>
      </form>
    </div>
  </main>
  <script src="../../assets/scripts/animations/alert.js"></script>
  <script src="../../assets/scripts/services/error-messages.js"></script>
  <script src="../../assets/scripts/services/request.js"></script>
  <script src="../../assets/scripts/services/register/defunct.js"></script>
  <script src="../../assets/scripts/services/update/fill-responsible.js"></script>
  <script src="../../assets/scripts/services/update/defunct.js"></script>
</body>
</html>